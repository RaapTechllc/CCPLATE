{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "guardian": {
    "enabled": true,
    "nudges": {
      "commit": {
        "enabled": true,
        "filesThreshold": 5,
        "minutesThreshold": 15
      },
      "test": {
        "enabled": true
      },
      "progress": {
        "enabled": true,
        "sensitivity": 0.4,
        "minFilesBeforeCheck": 3,
        "whitelist": []
      },
      "context": {
        "enabled": true,
        "threshold": 0.8,
        "watchdog": {
          "enabled": true,
          "thresholds": {
            "warning": 0.5,
            "orange": 0.7,
            "critical": 0.85,
            "forceHandoff": 0.95
          },
          "blockWritesAtCritical": true
        }
      },
      "error": {
        "enabled": true
      },
      "playwright": {
        "enabled": true
      }
    },
    "cooldown": {
      "minutes": 10,
      "toolUses": 5
    },
    "narrator": {
      "enabled": true
    }
  },
  "worktrees": {
    "baseDir": ".worktrees",
    "branchPrefix": "ccplate/"
  },
  "lsp": {
    "enabled": false,
    "languages": ["typescript"]
  },
  "rlm": {
    "enabled": true,
    "maxExcerptLines": 50,
    "recursionThreshold": 10,
    "maxRecursionDepth": 3
  },
  "models": {
    "oracle": "opus",
    "teamCoordinator": "opus",
    "codeReviewer": "opus",
    "securityReviewer": "opus",
    "tddGuide": "opus",
    "buildErrorResolver": "opus",
    "refactorCleaner": "opus",
    "metaAgent": "sonnet",
    "rlmAdapter": "sonnet",
    "mergeResolver": "haiku"
  }
}

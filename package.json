{
  "name": "ccplate",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "ccplate": "./src/cli/ccplate.ts"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "setup:bun": "node scripts/setup.js --install-bun",
    "predev": "node scripts/setup.js --check-only",
    "dev": "npm-run-all --parallel dev:next dev:convex",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:guardian": "node --experimental-strip-types e2e/guardian-tests/scripts/verify-nudges.ts",
    "test:guardian:simulate": "node --experimental-strip-types e2e/guardian-tests/scripts/simulate-session.ts",
    "test:guardian:worktrees": "node --experimental-strip-types e2e/guardian-tests/scripts/test-worktrees.ts",
    "test:load:auth": "k6 run tests/load/auth-burst.js",
    "test:load:ai": "k6 run tests/load/ai-builder-load.js",
    "test:load:mixed": "k6 run tests/load/mixed-workload.js",
    "test:load:schema": "k6 run tests/load/schema-lock.js",
    "test:load:all": "npm run test:load:auth && npm run test:load:ai && npm run test:load:mixed && npm run test:load:schema",
    "test:load:staging": "cross-env BASE_URL=https://staging.ccplate.com npm run test:load:mixed",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "ccplate": "node --experimental-strip-types src/cli/ccplate.ts",
    "guardian:webhook": "node --experimental-strip-types src/lib/guardian/adapters/github-webhook.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@auth/core": "^0.37.0",
    "@aws-sdk/client-s3": "^3.972.0",
    "@convex-dev/auth": "^0.0.90",
    "@hono/node-server": "^1.19.9",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.19",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "dotenv": "^17.2.3",
    "file-type": "^19.6.0",
    "hono": "^4.11.4",
    "minimatch": "^10.0.1",
    "next": "16.1.4",
    "openai": "^6.16.0",
    "p-map": "^7.0.2",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "resend": "^6.8.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}

{
  "name": "ccplate",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "ccplate": "./src/cli/ccplate.ts"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "setup:bun": "node scripts/setup.js --install-bun",
    "predev": "node scripts/setup.js --check-only 2>/dev/null || true",
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:guardian": "node --experimental-strip-types e2e/guardian-tests/scripts/verify-nudges.ts",
    "test:guardian:simulate": "node --experimental-strip-types e2e/guardian-tests/scripts/simulate-session.ts",
    "test:guardian:worktrees": "node --experimental-strip-types e2e/guardian-tests/scripts/test-worktrees.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "postinstall": "prisma generate",
    "ccplate": "node --experimental-strip-types src/cli/ccplate.ts",
    "guardian:webhook": "node --experimental-strip-types src/lib/guardian/adapters/github-webhook.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.972.0",
    "@hono/node-server": "^1.19.9",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.19",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "file-type": "^19.6.0",
    "hono": "^4.11.4",
    "next": "16.1.4",
    "next-auth": "^4.24.13",
    "openai": "^6.16.0",
    "pg": "^8.17.2",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "resend": "^6.8.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  }
}
